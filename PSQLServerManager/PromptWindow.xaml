<Window x:Class="PSQLServerManager.PromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PSQLServerManager"
        mc:Ignorable="d"
        Title="PromptWindow" Height="194" Width="400">
    <Grid Margin="0,10,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="63*"/>
            <ColumnDefinition Width="37*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btnBinDirectory" Content="Open Folder" HorizontalAlignment="Left" Height="32" Margin="10,52,0,0" VerticalAlignment="Top" Width="81" Click="btnBinDirectory_Click"/>
        <TextBox x:Name="tbBinDirectory" HorizontalAlignment="Left" Height="32" Margin="96,52,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="294" Grid.ColumnSpan="2"/>
        <Label Content="Please select the bin directory for PostgresSQL" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="30" Margin="10,10,0,0" VerticalAlignment="Top" Width="380" FontWeight="Bold" FontSize="14"/>
        <Button Grid.Column="1" Content="Done" HorizontalAlignment="Left" Height="22" Margin="63,136,0,0" VerticalAlignment="Top" Width="63" Click="Button_DoneClick"/>

    </Grid>
</Window>
